gmt pscoast -A0.1 -Slightblue -Df $proj $rgn -Ggray33 -X8.5c -O -K >> $outfile.ps 
gmt grdimage temp_inverse_log1.nc -Cconc.cpt $proj $rgn -Q -O -K >> $outfile.ps

#Annotations:
